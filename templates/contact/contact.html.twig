{% extends 'base.html.twig' %}

{% block title %} Nous contacter {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Nous contacter</h1>
    <div>
        {{ form_start(form) }}
                <div class="row"> {{ form_row(form.name) }}  </div>
                <div class="row"> {{ form_row(form.email) }}  </div>
                <div class="row"> {{ form_row(form.service) }}  </div>
                <div class="row"> {{ form_row(form.subject) }}  </div>
                <div class="row p10"> {{ form_row(form.message) }}  </div>
                <div class="col p-3 d-grid gap-2 d-md-flex justify-content-md-center">
                    <a type='button' href='{{ path('home') }}' class='btn btn-secondary' role='button' > Annuler </a>
                    {{ form_widget(form.submit) }}
                </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
